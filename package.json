{
	"name": "portfolio-sveltekit",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync && husky install",
		"test": "playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint . --fix",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@playwright/test": "^1.22.2",
		"@sveltejs/adapter-auto": "next",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.30.5",
		"@typescript-eslint/parser": "^5.30.5",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"node-sass": "^7.0.1",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"sass": "^1.53.0",
		"svelte": "^3.46.0",
		"svelte-check": "^2.7.1",
		"tslib": "^2.3.1",
		"typescript": "^4.7.2",
		"vite": "^2.9.13"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/fira-mono": "^4.5.0",
		"@lottiefiles/svelte-lottie-player": "^0.2.0",
		"@sveltejs/adapter-node": "^1.0.0-next.78",
		"@sveltejs/adapter-static": "^1.0.0-next.35",
		"@sveltejs/kit": "next",
		"cookie": "^0.4.1",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-import-resolver-typescript": "^3.2.5",
		"svelte-preprocess": "^4.10.7"
	},
	"lint-staged": {
		"*.{svelte,ts, tsx, jsx, js}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		]
	}
}
